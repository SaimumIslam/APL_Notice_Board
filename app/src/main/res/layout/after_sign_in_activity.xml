<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/not"
    tools:context="com.example.foysal.noticeboard.AfterSignInActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Select Your Option!!!!"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="35dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="47dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/creatNNButton"
        android:layout_alignStart="@+id/creatNNButton"
        android:layout_alignTop="@+id/creatNNButton"
        android:layout_marginTop="98dp"
        android:background="@drawable/not"
        android:onClick="NewsFBOnClick"
        android:text="New Notice"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp" />

    <Button
        android:id="@+id/oldButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="29dp"
        android:background="@drawable/not"
        android:onClick="OldBOnclick"
        android:text="Old Notice"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp" />

    <Button
        android:id="@+id/creatNNButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/not"
        android:onClick="crtNBOnClick"
        android:text="Create notice"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp" />

</RelativeLayout>
